<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBestDealList"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/txtproductName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:text="From Tianjin Headset Earbuds  "
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:text="From Tianjin"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:text="Minimun Order 6 Pcs"
            android:textSize="12dp"
            />


        <LinearLayout
            android:layout_below="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:weightSum="3"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ks-16,500    "
                android:textSize="13dp"

                />

            <TextView
                android:id="@+id/txtsold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 Sold"
                android:textSize="13dp"
                android:layout_marginLeft="40dp"
                />

            <ImageButton
                android:id="@+id/imgDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>